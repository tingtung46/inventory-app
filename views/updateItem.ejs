<html>

<head>
  <title>Update item</title>
  <link rel="stylesheet" href="/styles/updateItem.css">
  <script src="/utils/inputOnlyNumber.js" defer></script>
</head>

<body>
  <section id="root">
    <%- include('./partials/header.ejs') %>

    <main class="item-form">
      <div class="wrapper-form">
        <h1>Edit item</h1>

        <form action="/<%= item.id %>/update" method="post">
          <div class="item-input">
            <label for="item">Item Name</label>
            <input type="text" name="item" id="item" value="<%= item.item %>" />
          </div>

          <div class="item-input">
            <label for="brand">Brand Name</label>
            <select name="brand" id="brand">
              <% brands.forEach((brand) => { %>
              <option value="<%= brand %>" <%= brand === item.brand ? 'selected' : '' %>><%= brand %></option>
              <% }) %>
            </select>
          </div>

          <div class="item-input">
            <label for="category">Category</label>
            <select name="category" id="category">
              <% categories.forEach((category) => { %>
              <option value="<%= category %>" <%= category === item.category ? 'selected' : '' %>><%= category %></option>
              <% }) %>
            </select>
          </div>

          <div class="item-input">
            <label for="price">Price</label>
            <p class="price">
              &dollar;<input type="text" name="price" id="price" value="<%= item.price %>" />
            </p>
          </div>

          <button type="submit" class="item-submit">Update item</button>
        </form>
      </div>
    </main>
  </section>
</body>

</html>